likePost = () => {
  let post = document.getElementById("post-<%=@post.id%>");
  let icon = post.querySelector(".fa-thumbs-up");
  icon.classList.remove("far");
  icon.classList.add("fas");

  let likeButton = post.querySelector(".like-button");
  likeButton.setAttribute("href", "<%=post_like_path(@post, @like)%>");
  likeButton.setAttribute("data-method", "delete");

  let likeInfo = post.querySelector(".likes");
  likeInfo.innerHTML = "<%= likes_count(@post)%> <%= liked_by_users(@post) %>"
}

likePost();